{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug with MinGW GDB",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build_win/bin/thread_cpp_glfw.exe",  // 改成你的 exe 路径
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/build_win/bin",
      "environment": [
        { "name": "PATH", "value": "D:/MySoftwares/Msys2/mingw64/bin;${env:PATH}" }
      ],
      "externalConsole": true,
      "MIMode": "gdb",
      "miDebuggerPath": "D:/MySoftwares/Msys2/mingw64/bin/gdb.exe",
      "setupCommands": [
        { "description": "Enable pretty-printing", "text": "-enable-pretty-printing", "ignoreFailures": true }
      ]
    }
  ]
}