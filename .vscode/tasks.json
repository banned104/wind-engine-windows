{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build with mingw",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-B", "build_win",
        "-S", ".",
        "-G", "MinGW Makefiles",
        "-DCMAKE_C_COMPILER=D:/MySoftwares/Msys2/mingw64/bin/gcc.exe",
        "-DCMAKE_CXX_COMPILER=D:/MySoftwares/Msys2/mingw64/bin/g++.exe"
      ],
      "group": "build"
    },
    {
      "label": "make",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build", "build_win"
      ],
      "group": "build",
      "dependsOn": "build with mingw"
    }
  ]
}